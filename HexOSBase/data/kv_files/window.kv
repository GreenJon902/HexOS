#:import sysConfig globals.sysConfig

<Window>:
    Image:
        id: ParentScreenImage

        size_hint: None, None
        opacity: 0

    FloatLayout:
        pos_hint: {"right": 1, "top": 1}
        size_hint: 1, 1

        Switch:
            id: SeeThrough

            size_hint:(0.15,0.1)
            pos_hint: {"right": 1, "top": 1}

            on_active: root.see_through_flip(args[1])
            active: True

        Label:
            size_hint:(0.15,0.1)
            text: 'See Through Window'
            pos_hint: {"top": 1}
            right: SeeThrough.x


