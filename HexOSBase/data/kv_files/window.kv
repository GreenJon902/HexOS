#:import sysConfig globals.sysConfig

<Window>:
    Image:
        id: ParentScreenImage

        size_hint: None, None
        opacity: 0


    ToggleButton:
        id: SeeThrough

        size_hint: 0.2, 0.05
        pos_hint: {"x": 0, "top": 1}

        text: "See through window"

        on_state: root.see_through_flip(args[1])
        state: "down"


